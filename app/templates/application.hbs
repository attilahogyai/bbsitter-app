<div class="off-canvas-wrap" data-offcanvas>
  <div class="inner-wrap">
    <div class="contain-to-grid fixed">
    <nav class="tab-bar show-for-small">
      <section class="left-small">
      {{#if loading}}
        <a class="fa fa-2x fa-spin fa-spinner" href="#" style="color:#10B767;left:5px;top:5px;position:relative;"><span></span></a>
       {{else}}
        <a class="left-off-canvas-toggle menu-icon" href="#"><span></span></a>
      {{/if}}
      </section>
      <section class="middle tab-bar-section">
        <h1 class="title">{{#link-to 'index'}}{{loc-x '/main/menu_title'}}{{/link-to}}</h1>
      </section>
    </nav>
    
    <nav class="top-bar hide-for-small" data-topbar>
      <ul class="title-area">
        <li class="name">
        <h1>{{#link-to 'index'}}{{loc-x '/main/menu_title'}}{{/link-to}}</h1>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
      </ul>
      <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right">
          {{#if isAuthenticated}}
          {{#if isAdmin}}
          <li class="hide-for-medium">{{#link-to 'admin.editor'}}{{loc-x '/menu/admin'}}{{/link-to}}</li>
          {{/if}}          
          <li class="divider"></li>
          <li>{{#link-to 'index'}}<i class="fa fa-search"></i> {{loc-x '/menu/index'}}{{/link-to}}</li>
          <li class="divider"></li>
          <li>{{#link-to 'pulzer.list'}}<i class="fa fa-calendar-o"></i> {{loc-x '/menu_bs/pulzer'}}{{/link-to}}</li>          
          <li class="divider"></li>
          <li>{{#link-to 'profile'}}<div class="profileimg" {{bind-attr style="profileImg"}}>&nbsp;</div> {{username}}{{/link-to}}</li>
          <li class="divider"></li>
          <li><a href="#" {{action 'signout'}} alt="{{loc-x '/menu/signout'}}" title="{{loc-x '/menu/signout'}}"><i class="fa fa-power-off"></i></a></li>
          {{else}}
          <li><a href="#" {{action 'jumpToSignup'}}>{{loc-x '/menu/signup'}}</a></li>
          <li class="divider"></li>
          <li><a href="#" {{action 'jumpToSignin'}}>{{loc-x '/menu/signin'}}</a></li>
          {{/if}}
        </ul>
      </section>
    </nav>
    </div>
    <aside class="left-off-canvas-menu fixed">
      <ul class="off-canvas-list">
        <li><label>&nbsp;</label></li>
        {{#if isAuthenticated}}
        {{#if isAdmin}}
        <li>{{#link-to 'admin.editor'}}{{loc-x '/menu/admin'}}{{/link-to}}</li>
        {{/if}}                
        <li>{{#link-to 'index'}}<i class="fa fa-search"></i> {{loc-x '/menu/index'}}{{/link-to}}</li>
        <li>{{#link-to 'pulzer.list'}}<i class="fa fa-calendar-o"></i> {{loc-x '/menu_bs/pulzer'}}{{/link-to}}</li>          
        <li>{{#link-to 'profile'}}<i class="fa fa-user"></i> {{username}}{{/link-to}}</li>
        <li><a href="#" {{action 'signout'}}><i class="fa fa-power-off"></i> {{loc-x '/menu/signout'}}</a></li>
        {{else}}
        <li><a href="#" {{action 'jumpToSignup'}}>{{loc-x '/menu/signup'}}</a></li>
          <li class="divider"></li>
        <li><a href="#" {{action 'jumpToSignin'}}>{{loc-x '/menu/signin'}}</a></li>
        {{/if}}
      </ul>
    </aside>
    <section class="main-section">
      <div id="main">{{liquid-outlet}}</div>

      <div id="footer">
      <div class="row links">


        <div class="medium-4 columns">
        <a href="/blog/?page_id=8">{{loc-x '/menu/about'}}</a>
        <a href="/blog/?page_id=25">Kapcsolat</a>
        <hr>
        
        {{#if isAuthenticated}}
        {{#link-to 'index'}}<i class="fa fa-search"></i> {{loc-x '/menu/index'}}{{/link-to}}
        {{#link-to 'pulzer.list'}}<i class="fa fa-calendar-o"></i> {{loc-x '/menu_bs/pulzer'}}{{/link-to}}
        <a href="#" {{action 'signout'}}><i class="fa fa-power-off"></i> {{loc-x '/menu/signout'}}</a>
        {{else}}
        <a href="#" {{action 'jumpToSignup'}}>{{loc-x '/menu/signup'}}</a>
        <a href="#" {{action 'jumpToSignin'}}>{{loc-x '/menu/signin'}}</a>
        {{/if}}
        </div> 

        <div class="medium-4 columns">
        <a href="/blog/?page_id=17">
        <h3>Szülőknek</h3>
        Hogyan működik?</a>
        
        <a href="/blog/?page_id=22">
        <h2>Bébiszittereknek</h2>
        Miért jó ha regisztrálsz?
        </a>        
        </div> 
        <div class="medium-4 columns">
        {{#link-to 'terms'}}{{loc-x '/menu/terms'}}{{/link-to}}
        {{#link-to 'privacy'}}{{loc-x '/menu/privacy'}}{{/link-to}}        
        </div>  
      </div>
      <div class="row">
      <div class="column small-12 text-center">
      <hr>
      <!--p>Csatlakozz hozzánk</p>
      <h2>
      <i class="fa fa-facebook-square fa-2"></i>
      <i class="fa fa-google-plus-square fa-2"></i>
      <i class="fa fa-twitter-square fa-2"></i>
      <i class="fa fa-linkedin-square fa-2"></i>
      </h2-->
      <p>@ 2015 bbsitter.hu</p>
      </div>
      </div>
    </section>
    <a class="exit-off-canvas"></a>
  </div>
</div>

<div id="errorAlert" class="reveal-modal" data-reveal>
    <h2></h2>
    <p></p>
    <input type="button" class="button ok" value="{{loc-x '/button/ok'}}"/>
    <a class="close-reveal-modal">&#215;</a>
</div>
<div id="confirmAlert" class="reveal-modal" data-reveal>
    <h2>{{loc-x '/alert/confirm'}}</h2>
    <p></p>
    <input type="button" class="button alert yes" value="{{loc-x '/button/yes'}}"/>
    <input type="button" class="button cancel" value="{{loc-x '/button/cancel'}}"/>
    <a class="close-reveal-modal">&#215;</a>
</div>

<div id="application-popup" class="reveal-modal" data-reveal>
<div class="row">
<div class="small-12 columns text-right close-icon">
<a href="#" {{action 'closeModal'}}>&#215;</a>
</div>
<div class="small-12 columns">
{{outlet "application-popup-outlet"}}
</div>
</div>
</div>


{{#if loading}}
<div id="loader" style="position:fixed;top:0px;left:0px;width:100%;height:100%;background:rgba(255, 255, 255, 0.2);z-index:10000">
<div style="color:#10B767;position:absolute;top:5px;width:100%;text-align:center;">
<div class="hide-for-small">
<i class="fa fa-2x fa-spin fa-spinner"></i><br>
<span>
{{!#if loadProcessing}}
{{!loc-x '/loading/load_processing'}}
{{!/if}}
{{!#if saveProcessing}}
{{!loc-x '/loading/save_processing'}}
{{!/if}}
</span>
</div>
</div>
</div>
{{/if}}
